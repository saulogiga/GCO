                <div style="clear:both;"></div>
            </div>
            <div id="divDetalhes_@item.IdPublicacaoRelease"  style="display:none;">
                <textarea style="width: 99%; height: 300px; margin-top: 5px;">@item.Detalhes</textarea>
            </div>  
            </div>
        }
        </div>
    </div>
